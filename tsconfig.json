{
  "compilerOptions": {
    "outDir": "./build/",
    "rootDir": "./src",
    "noImplicitAny": false,
    "module": "NodeNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*.ts","./src/**/*.tsx","./src/**/*.js"]
}
